<!DOCTYPE html>
<html>
  <head>
    <title>ShiftManager</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.6/css/all.css">

    <%= stylesheet_link_tag    'admins/application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= stylesheet_pack_tag 'hello_vue' %>
    <%= javascript_pack_tag 'hello_vue' %>
  </head>

  <body class="skin-blue wysihtml5-supported">
    <div class="wrapper">
      <%= render 'admins/shared/header' %>
      <%= render 'admins/shared/sidebar' %>
      <div class="content-wrapper" style="min-height: 1080px;">
        <section class="content">
          <%= yield %>
        </section>
      </div>
    </div>
  </body>
</html>
