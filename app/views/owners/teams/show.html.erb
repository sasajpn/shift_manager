<%= stylesheet_link_tag 'owners/fullcalendar' %>
<%= javascript_include_tag 'owners/teams/show' %>
<%= javascript_pack_tag 'owners/shift_tables/app' %>


<div class="box">
  <div class="box-body">
    <div style="height:200px; width:100%; overflow-y:scroll;">
      <div id="shift_tables" data-team_id="<%= @team.id %>"></div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <h3 class="profile-username text-center"><%= @team.name %></h3>
        <p class="text-muted text-center">認証コード：<%= @team.identifier %></p>
        <%= link_to '認証コードを更新する', update_identifier_owners_team_path(@team), method: :patch,
          data: { confirm: '認証コードを更新してもよろしいですか？' }, class: 'btn btn-block btn-warning btn-sm' %>
        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>営業開始時間</b> <span class="pull-right"><%= @team.open_time %></span>
          </li>
          <li class="list-group-item">
            <b>営業終了時間</b> <span class="pull-right"><%= @team.close_time %></span>
          </li>
        </ul>
        <%= link_to owners_team_members_unapprovals_path(@team), class: 'btn btn-default btn-block' do %>
          未承認の従業員一覧
          <small class="label pull-right bg-red"><%= @unapproved_members.count %></small>
        <% end %>
        <hr>
        <%= link_to '従業員一覧', owners_team_members_path(@team), class: 'btn btn-default btn-block' %>
        <%= link_to 'シフト希望一覧', owners_team_shift_submissions_path(@team), class: 'btn btn-default btn-block' %>
        <%= link_to 'シフト調整済一覧', owners_team_shift_adjustments_path(@team), class: 'btn btn-default btn-block' %>
        <hr>
        <%= link_to '登録内容変更', edit_owners_team_path(@team), class: 'btn btn-success btn-block' %>
      </div>
    </div>
    <% if @members.any? %>
      <div class="box">
        <div class="box-header">
          <h4 class="box-title">従業員一覧</h4>
        </div>
        <div class="box-body no-padding">
          <div id="members_pagination">
            <%= render 'members_pagination' %>
          </div>
        </div>
        <div class="box-footer clearfix">
          <div id="paginator">
            <%= paginate @members, theme: 'owners', remote: true %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-8">
    <div class="box box-primary">
      <div class="box-body no-padding">
        <div id="owners_shift_calendar" data-team_id="<%= @team.id %>"></div>
      </div>
    </div>
  </div>
</div>
