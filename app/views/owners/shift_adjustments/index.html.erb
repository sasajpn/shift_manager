<div class="row">
  <div class="col-md-3">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <h3 class="profile-username text-center"><%= @team.name %></h3>
        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>営業開始時間</b> <span class="pull-right"><%= @team.open_time %></span>
          </li>
          <li class="list-group-item">
            <b>営業終了時間</b> <span class="pull-right"><%= @team.close_time %></span>
          </li>
        </ul>
        <%= link_to 'シフトの登録', new_owners_team_shift_submission_path(@team), class: 'btn btn-primary btn-block' %>
        <hr>
        <%= link_to 'シフトカレンダー', owners_team_path(@team), class: 'btn btn-default btn-block' %>
        <%= link_to 'シフト希望一覧', owners_team_shift_submissions_path(@team), class: 'btn btn-default btn-block' %>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <% if @shift_adjustments.any? %>
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">シフト調整済一覧</h3>
          <div class="box-tools">
            <%= paginate @shift_adjustments, theme: 'owners' %>
          </div>
        </div>
        <div class="box-body no-padding">
          <table class="table">
            <tbody>
              <tr>
                <th>勤務日</th>
                <th>開始時間</th>
                <th>終了時間</th>
              </tr>
              <% @shift_adjustments.each do |shift_adjustment| %>
                <tr>
                  <td><%= shift_adjustment.shift_submission.submitted_date_format %></td>
                  <td><%= shift_adjustment.start_time %></td>
                  <td><%= shift_adjustment.end_time %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="callout callout-danger">
        <p>調整済のシフトがありません</p>
      </div>
    <% end %>
  </div>
</div>
