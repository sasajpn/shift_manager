<div class="row">
  <div class="col-md-3">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>勤務者</b> <span class="pull-right"><%= @member.user.name %></span>
          </li>
          <li class="list-group-item">
            <b>勤務日</b> <span class="pull-right"><%= @shift_adjustment.shift_submission.submitted_date_format %></span>
          </li>
          <li class="list-group-item">
            <b>勤務時間</b> <span class="pull-right"><%= @shift_adjustment.adjusted_time %></span>
          </li>
          <% if @shift_adjustment.account %>
            <li class="list-group-item">
              <b>作成者</b> <span class="pull-right"><%= @shift_adjustment.account.name %></span>
            </li>
          <% end %>
        </ul>
        <%= link_to '勤務時間変更', edit_owners_shift_adjustment_path(@shift_adjustment), class: "btn btn-success btn-block" %>
        <hr>
        <%= link_to 'シフト調整済一覧', owners_team_shift_adjustments_path(@member.team), class: 'btn btn-default btn-block' %>
      </div>
    </div>
  </div>
</div>
