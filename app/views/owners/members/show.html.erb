<%= stylesheet_link_tag 'fullcalendar' %>
<%= javascript_include_tag 'owners/members/show' %>

<div class="row">
  <div class="col-md-3">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <p class="text-muted text-center"><%= @member.user.name_kana %></p>
        <h3 class="profile-username text-center"><%= @member.user.name %></h3>
        <p class="text-muted text-center"><%= @member.user.email %></p>
        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>チーム名</b> <span class="pull-right"><%= @team.name %></span>
          </li>
          <li class="list-group-item">
            <b>役職</b> <span class="pull-right"><%= @member.role_i18n %></span>
          </li>
          <li class="list-group-item">
            <b>シフト調整権限</b> <span class="pull-right"><%= @member.adjustment_ability %></span>
          </li>
        </ul>
        <%= link_to 'シフト登録', new_owners_member_shift_registration_path(@member), class: "btn btn-primary btn-block" %>
        <hr>
        <%= link_to '設定変更', edit_owners_member_path(@member), class: "btn btn-success btn-block" %>
        <hr>
        <%= link_to '従業員一覧', owners_team_members_path(@member.team), class: 'btn btn-default btn-block' %>
      </div>
    </div>
    <div class="box">
      <div class="box-body no-padding">
        <table class="table">
          <tbody>
            <tr>
              <td>未調整のシフト希望</td>
              <td><span style="color: #3a87ad; opacity: 0.6;"><i class="fa fa-square"></i></span></td>
            </tr>
            <tr>
              <td>調整済みのシフト</td>
              <td><span style="color: #3a87ad;"><i class="fa fa-square"></i></span></td>
            </tr>
            <tr>
              <td>登録されたシフト</td>
              <td><span style="color: #FA3932"><i class="fa fa-square"></i></span></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <div class="box box-primary">
      <div class="box-body no-padding">
        <div id="members_shift_calendar" data-member_id="<%= @member.id %>"></div>
      </div>
    </div>
  </div>
</div>
