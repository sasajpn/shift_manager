<div class="row">
  <div class="col-md-3">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <h3 class="profile-username text-center"><%= @team.name %></h3>
        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>従業員数</b> <span class="pull-right"><%= @team.members.count %></span>
          </li>
          <li class="list-group-item">
            <b>営業開始時間</b> <span class="pull-right"><%= @team.open_time %></span>
          </li>
          <li class="list-group-item">
            <b>営業終了時間</b> <span class="pull-right"><%= @team.close_time %></span>
          </li>
        </ul>
        <%= link_to 'シフトの登録', new_owners_team_shift_submission_path(@team), class: 'btn btn-primary btn-block' %>
        <hr>
        <%= link_to 'ホーム', owners_team_path(@team), class: 'btn btn-default btn-block' %>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <% if @members.any? %>
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">従業員一覧</h3>
          <div class="box-tools">
            <%= paginate @members, theme: 'owners' %>
          </div>
        </div>
        <div class="box-body no-padding">
          <table class="table">
            <tbody>
              <tr>
                <th>名前</th>
                <th>役職</th>
              </tr>
              <% @members.each do |member| %>
                <tr>
                  <td><%= link_to member.user.name, owners_member_path(member) %></td>
                  <td><%= member.role_i18n %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="callout callout-danger">
        <p>従業員が登録されていません</p>
      </div>
    <% end %>
  </div>
</div>
