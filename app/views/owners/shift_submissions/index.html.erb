<div class="row">
  <div class="col-md-3">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <h3 class="profile-username text-center"><%= @team.name %></h3>
        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>営業開始時間</b> <span class="pull-right"><%= @team.open_time %></span>
          </li>
          <li class="list-group-item">
            <b>営業終了時間</b> <span class="pull-right"><%= @team.close_time %></span>
          </li>
        </ul>
        <%= link_to 'シフトの登録', new_owners_team_shift_submission_path(@team), class: 'btn btn-primary btn-block' %>
        <hr>
        <%= link_to 'ホーム', owners_team_path(@team), class: 'btn btn-default btn-block' %>
      </div>
    </div>
  </div>
  <% if @shift_submissions.any? %>
    <div class="col-md-9">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">シフト希望一覧</h3>
          <div class="box-tools">
            <%= paginate @shift_submissions, theme: 'owners' %>
          </div>
        </div>
        <div class="box-body no-padding">
          <table class="table">
            <tbody>
              <tr>
                <th>提出者</th>
                <th>希望日</th>
                <th>開始時間</th>
                <th>終了時間</th>
              </tr>
              <% @shift_submissions.each do |shift_submission| %>
                <tr>
                  <td><%= shift_submission.member.user.name %></td>
                  <td><%= link_to shift_submission.submitted_date_format, owners_shift_submission_path(shift_submission) %></td>
                  <td><%= shift_submission.start_time %></td>
                  <td><%= shift_submission.end_time %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="callout callout-danger">
        <p>未承認のシフト希望がありません</p>
      </div>
    </div>
  <% end %>
</div>
