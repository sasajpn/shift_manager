<div class="register-box">
  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), inline_errors: false) do |f| %>
    <%= f.alert_message "以下のエラー内容を修正してください" %>
    <div class="register-box-body">
      <p class="login-box-msg">パスワード変更</p>
      <%= f.password_field :current_password, autocomplete: "off", placeholder: '現在のパスワード' %>
      <%= f.password_field :password, autocomplete: "off",
        placeholder: "新しいパスワード（#{@minimum_password_length}文字以上）", label: '新しいパスワード' %>
      <%= f.password_field :password_confirmation, autocomplete: "off",
        placeholder: '新しいパスワード（確認用）', label: '新しいパスワード（確認用）' %>
      <div class="row">
        <div class="col-md-6">
          <%= f.submit "変更する", class: 'btn btn-primary btn-block' %>
        </div>
        <div class="col-md-6">
          <%= link_to "キャンセル", :back, class: 'btn btn-default btn-block' %>
        </div>
      </div>

    </div>
  <% end %>
</div>
