<div class="register-box">
  <div class="register-logo">
    <a href="../../index2.html"><b>シフトマネージャー</b></a>
  </div>
  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), inline_errors: false) do |f| %>
    <%= f.alert_message "以下のエラー内容を修正してください" %>
    <div class="register-box-body">
    <p class="login-box-msg">アカウント作成</p>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス' %>
    <div class="row">
      <div class="col-md-6">
        <%= f.text_field :last_name_kana, placeholder: 'セイ' %>
        <%= f.text_field :last_name, placeholder: '姓' %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :first_name_kana, placeholder: 'メイ' %>
        <%= f.text_field :first_name, placeholder: '名' %>
      </div>
    </div>
      <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード（#{@minimum_password_length}文字以上）" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'パスワード（確認用）' %>
      <%= f.submit "登録", class: 'btn btn-primary btn-block' %>
      <a href="login.html" class="text-center">I already have a membership</a>
    </div>
  <% end %>
</div>
