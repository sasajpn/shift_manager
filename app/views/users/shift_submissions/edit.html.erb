<%= javascript_pack_tag 'users/shift_submissions/edit' %>
<%= stylesheet_pack_tag 'users/shift_submissions/edit' %>


<div class="row">
  <div class="col-md-3">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <h3 class="profile-username text-center"><%= @team.name %></h3>
        <p class="text-muted text-center">営業時間：<%= @team.open_time %>~<%= @team.close_time %></p>
        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>希望日</b> <span class="pull-right"><%= @shift_submission.submitted_date %></span>
          </li>
          <li class="list-group-item">
            <b>開始時間</b> <span class="pull-right"><%= @shift_submission.start_time %></span>
          </li>
          <li class="list-group-item">
            <b>終了時間</b> <span class="pull-right"><%= @shift_submission.end_time %></span>
          </li>
        </ul>
        <%= link_to 'キャンセル', users_shift_submission_path(@shift_submission), class: 'btn btn-default btn-block' %>
        <hr>
        <%= link_to '削除', users_shift_submission_path(@shift_submission), method: :delete,
          data: { confirm: '削除してもよろしいですか？' }, class: "btn btn-danger btn-block" %>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="box box-default">
      <div class="box-header with-border">
        <h3 class="box-title">シフト希望変更</h3>
      </div>
      <div class="box-body">
        <div id="shift_submissions_edit" data-shift_submission_id="<%= @shift_submission.id %>"></div>
      </div>
    </div>
  </div>
</div>
