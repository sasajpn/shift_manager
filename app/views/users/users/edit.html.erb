<div class="row">
  <div class="col-md-6">
    <div class="box box-default">
      <%= bootstrap_form_for [:users, current_user] do |f| %>
        <div class="box-header with-border">
          <h3 class="box-title">登録内容変更</h3>
        </div>
        <div class="box-body">
          <%= f.alert_message "以下のエラー内容を修正してください" %>
          <%= f.email_field :email, autofocus: true %>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %>
          <%= f.text_field :last_name %>
          <%= f.text_field :first_name %>
        </div>
        <div class="box-footer">
          <%= f.submit '更新', class: 'btn btn-primary btn-block' %>
          <hr>
          <%= link_to 'キャンセル', users_home_index_path, class: 'btn btn-default btn-block' %>
          <br>
          <%= link_to '退会する', users_deactivation_path, class: 'btn btn-link' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
