<%= javascript_include_tag 'users/home/index' %>

<div class="row">
  <div class="col-md-3">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <p class="text-muted text-center"><%= current_user.name_kana %></p>
        <h3 class="profile-username text-center"><%= current_user.name %></h3>
        <p class="text-muted text-center"><%= current_user.email %></p>
        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>参加チーム数</b> <span class="pull-right"><%= current_user.members.count %></span>
          </li>
        </ul>
        <%= link_to '登録内容変更', edit_users_user_path(current_user), class: "btn btn-success btn-block" %>
        <%= link_to 'パスワード変更', edit_user_registration_path, class: "btn btn-warning btn-block" %>
      </div>
    </div>
  </div>
  <% if current_user.teams.any? %>
    <div class="col-md-3">
      <div class="box">
        <div class="box-header">
          <h4 class="box-title">参加チーム</h4>
        </div>
        <div class="box-body no-padding">
          <table class="table">
            <tbody>
              <% current_user.teams.each do |team| %>
                <tr>
                  <td><%= team.name %></td>
                  <td><span class="text-aqua"><i class="fa fa-square"></i></span></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="box box-primary">
        <div class="box-body no-padding">
          <div id="shift_calendars"></div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="col-md-9">
      <div class="callout callout-danger">
        <p>参加しているチームがありません</p>
      </div>
    </div>
  <% end %>
</div>
