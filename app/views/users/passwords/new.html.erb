<div class="register-box">
  <div class="register-logo">
    <b>パスワードの再設定</b>
  </div>
  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, inline_errors: false) do |f| %>
    <%= f.alert_message "以下のエラー内容を修正してください" %>
    <div class="register-box-body">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: '登録しているメールアドレスを入力してください' %>
      <%= f.submit "再設定する", class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
</div>
