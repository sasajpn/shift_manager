<%= stylesheet_link_tag 'users/fullcalendar' %>
<%= javascript_include_tag 'users/shift_coordinators/members/show' %>

<div class="row">
  <div class="col-md-3">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <p class="text-muted text-center"><%= @member.user.name_kana %></p>
        <h3 class="profile-username text-center"><%= @member.user.name %></h3>
        <p class="text-muted text-center"><%= @member.user.email %></p>
        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>役職</b> <span class="pull-right"><%= @member.role_i18n %></span>
          </li>
          <li class="list-group-item">
            <b>シフト調整権限</b> <span class="pull-right"><%= @member.adjustment_ability %></span>
          </li>
        </ul>
        <%= link_to 'シフトの登録', new_users_full_timers_member_shift_registration_path(@member), class: "btn btn-primary btn-block" %>
        <hr>
        <%= link_to '設定変更', edit_users_managers_member_path(@member), class: "btn btn-success btn-block" %>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <div class="box box-primary">
      <div class="box-body no-padding">
        <div id="users_shift_coordinators_shift_calendar" data-member_id="<%= @member.id %>"></div>
      </div>
    </div>
  </div>
</div>
