<div class="row">
  <div class="col-md-3">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <p class="text-muted text-center"><%= @member.user.name_kana %></p>
        <h3 class="profile-username text-center"><%= @member.user.name %></h3>
        <p class="text-muted text-center"><%= @member.user.email %></p>
        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>役職</b> <span class="pull-right"><%= @member.role_i18n %></span>
          </li>
        </ul>
        <%= link_to 'シフトの登録', { controller: "users/#{role}/shift_registrations", action: 'new', member_id: @member.id }, class: "btn btn-primary btn-block" %>
        <hr>
        <%= link_to 'メンバー一覧', { controller: "users/#{role}/members", action: 'index', team_id: @member.team.id }, class: 'btn btn-default btn-block' %>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <div class="box box-primary">
      <div class="box-body no-padding">
        <div id="members_shift_calendar" data-member_id="<%= @member.id %>"></div>
      </div>
    </div>
  </div>
</div>
