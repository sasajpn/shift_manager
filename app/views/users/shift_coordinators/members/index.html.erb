<div class="row">
  <div class="col-md-3">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <h3 class="profile-username text-center"><%= @team.name %></h3>
        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>従業員数</b> <span class="pull-right"><%= @team.members.approvals.count %></span>
          </li>
          <li class="list-group-item">
            <b>営業開始時間</b> <span class="pull-right"><%= @team.open_time %></span>
          </li>
          <li class="list-group-item">
            <b>営業終了時間</b> <span class="pull-right"><%= @team.close_time %></span>
          </li>
          <li class="list-group-item">
            <b>登録可能従業員残数</b> <span class="pull-right"><%= @team.registerable_count %></span>
          </li>
        </ul>
        <input class="btn btn-success btn-block" type="button" value="登録可能従業員数追加" onclick="alert('管理者にお問い合わせください');">
        <hr>
        <%= link_to 'シフトカレンダー', { controller: "users/shift_coordinators/teams", action: 'show', id: @team.id }, class: 'btn btn-default btn-block' %>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <% if @members.any? %>
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">従業員一覧</h3>
          <div class="box-tools">
            <%= paginate @members, theme: 'users' %>
          </div>
        </div>
        <div class="box-body no-padding">
          <table class="table">
            <tbody>
              <tr>
                <th>名前</th>
                <th>役職</th>
              </tr>
              <% @members.each do |member| %>
                <tr>
                  <td><%= link_to member.user.name, { controller: "users/shift_coordinators/members", action: 'show', id: member.id } %></td>
                  <td><%= member.role_i18n %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="callout callout-danger">
        <p>従業員が登録されていません</p>
      </div>
    <% end %>
  </div>
</div>
