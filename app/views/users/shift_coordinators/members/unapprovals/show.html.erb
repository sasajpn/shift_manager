<div class="row">
  <div class="col-md-3">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <p class="text-muted text-center"><%= @member.user.name_kana %></p>
        <h3 class="profile-username text-center"><%= @member.user.name %></h3>
        <p class="text-muted text-center"><%= @member.user.email %></p>
        <ul class="list-group list-group-unbordered">
        </ul>
        <%= link_to '承認する', edit_users_shift_coordinators_members_unapproval_path(@member), class: "btn btn-primary btn-block" %>
        <hr>
        <%= link_to '否認する', users_shift_coordinators_members_unapproval_path(@member), method: :delete,
          data: { confirm: 'この操作は取り消すことができません。本当に否認してもよろしいですか？' }, class: "btn btn-danger btn-block" %>
        <hr>
        <%= link_to '戻る', users_shift_coordinators_team_members_unapprovals_path(@team), class: 'btn btn-default btn-block' %>
      </div>
    </div>
  </div>
</div>
