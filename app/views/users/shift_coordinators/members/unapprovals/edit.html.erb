<%= javascript_pack_tag 'users/shift_coordinators/members/unapprovals/edit' %>
<%= stylesheet_pack_tag 'users/shift_coordinators/members/unapprovals/edit' %>

<div class="row">
  <div class="col-md-3">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <p class="text-muted text-center"><%= @member.user.name_kana %></p>
        <h3 class="profile-username text-center"><%= @member.user.name %></h3>
        <p class="text-muted text-center"><%= @member.user.email %></p>
        <ul class="list-group list-group-unbordered">
        </ul>
        <%= link_to 'キャンセル', users_shift_coordinators_members_unapproval_path(@member), class: 'btn btn-default btn-block' %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="box box-default">
      <div class="box-header with-border">
        <h3 class="box-title">従業員登録</h3>
      </div>
      <div class="box-body">
        <div id="members_unapprovals_edit" data-member_id="<%= @member.id %>"></div>
      </div>
    </div>
  </div>
</div>
