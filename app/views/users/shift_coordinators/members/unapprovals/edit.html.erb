<div class="row">
  <div class="col-md-3">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <p class="text-muted text-center"><%= @member.user.name_kana %></p>
        <h3 class="profile-username text-center"><%= @member.user.name %></h3>
        <p class="text-muted text-center"><%= @member.user.email %></p>
        <ul class="list-group list-group-unbordered">
        </ul>
        <%= link_to '戻る', users_shift_coordinators_members_unapproval_path(@member), class: 'btn btn-default btn-block' %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="box box-default">
      <%= bootstrap_form_for(@member, url: users_shift_coordinators_members_unapproval_path, html: { method: 'PATCH' }) do |f| %>
        <div class="box-header with-border">
          <h3 class="box-title">従業員登録</h3>
        </div>
        <div class="box-body">
          <%= f.alert_message "以下のエラー内容を修正してください" %>
          <%= f.select :role, Member.roles_i18n.invert %>
          <%= f.hidden_field :approve, value: true %>
        </div>
        <div class="box-footer">
          <%= f.submit '更新', class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
