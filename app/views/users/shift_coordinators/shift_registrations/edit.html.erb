<%= javascript_pack_tag 'users/shift_coordinators/shift_registrations/edit' %>
<%= stylesheet_pack_tag 'users/shift_coordinators/shift_registrations/edit' %>

<div class="row">
  <div class="col-md-3">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <h3 class="profile-username text-center"><%= @team.name %></h3>
        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>営業開始時間</b> <span class="pull-right"><%= @team.open_time %></span>
          </li>
          <li class="list-group-item">
            <b>営業終了時間</b> <span class="pull-right"><%= @team.close_time %></span>
          </li>
          <li class="list-group-item">
            <b>登録者</b> <span class="pull-right"><%= @shift_registration.account_name %></span>
          </li>
          <li class="list-group-item">
            <b>勤務者</b> <span class="pull-right"><%= @member.user.name %></span>
          </li>
          <li class="list-group-item">
            <b>役職</b> <span class="pull-right"><%= @member.role_i18n %></span>
          </li>
        </ul>
        <% if params[:referrer] == 'members_shift_calendar' %>
          <%= link_to '戻る', { controller: 'users/shift_coordinators/members', action: 'show', id: @member.id }, class: 'btn btn-default btn-block' %>
        <% else %>
          <%= link_to 'シフトカレンダー', { controller: "users/shift_coordinators/teams", action: 'show', id: @team.id }, class: 'btn btn-default btn-block' %>
        <% end %>
        <hr>
        <%= link_to '削除', users_shift_coordinators_shift_registration_path(@shift_registration), method: :delete,
          data: { confirm: '削除してもよろしいですか？' }, class: "btn btn-danger btn-block" %>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="box box-default">
      <div class="box-header with-border">
        <h3 class="box-title">シフト登録内容変更</h3>
      </div>
      <div class="box-body">
        <div id="shift_registrations_edit"
          data-shift_registration_id="<%= @shift_registration.id %>" data-team_id="<%= @team.id %>" data-member_id="<%= @member.id %>">
        </div>
      </div>
    </div>
  </div>
</div>
