<%= javascript_pack_tag 'users/shift_coordinators/shift_adjustments/new' %>
<%= stylesheet_pack_tag 'users/shift_coordinators/shift_adjustments/new' %>

<div class="row">
  <div class="col-md-3">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>提出者</b> <span class="pull-right"><%= @shift_submission.user.name %></span>
          </li>
          <li class="list-group-item">
            <b>希望日</b> <span class="pull-right"><%= @shift_submission.submitted_date_format %></span>
          </li>
          <li class="list-group-item">
            <b>希望時間</b> <span class="pull-right"><%= @shift_submission.submitted_time %></span>
          </li>
        </ul>
        <%= link_to 'キャンセル', { controller: 'users/shift_coordinators/shift_submissions', action: 'show', id: @shift_submission.id },
          class: 'btn btn-default btn-block' %>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="box box-default">
        <div class="box-header with-border">
          <h3 class="box-title">シフトの調整</h3>
        </div>
        <div class="box-body">
          <div id="shift_adjustments_new" data-shift_submission_id="<%= @shift_submission.id %>"></div>
        </div>
    </div>
  </div>
</div>
