<%= stylesheet_link_tag 'users/fullcalendar' %>
<%= javascript_include_tag 'users/teams/show' %>

<div class="row">
  <div class="col-md-3">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <h3 class="profile-username text-center"><%= @team.name %></h3>
        <% if @member.manager? %>
          <p class="text-muted text-center">認証コード：<%= @team.identifier %></p>
          <%= link_to '認証コードを更新する', update_identifier_users_managers_team_path(@team), method: :patch,
            data: { confirm: '認証コードを更新してもよろしいですか？' }, class: 'btn btn-block btn-warning btn-sm' %>
        <% end %>
        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>営業開始時間</b> <span class="pull-right"><%= @team.open_time %></span>
          </li>
          <li class="list-group-item">
            <b>営業終了時間</b> <span class="pull-right"><%= @team.close_time %></span>
          </li>
          <li class="list-group-item">
            <b>役職</b> <span class="pull-right"><%= @member.role_i18n %></span>
          </li>
        </ul>
        <%= link_to 'シフト希望の提出', new_users_member_shift_submission_path(@member), class: 'btn btn-primary btn-block' %>
        <hr>
        <%= link_to 'シフト希望一覧', users_member_shift_submissions_path(@member), class: 'btn btn-default btn-block' %>
        <hr>
        <%= link_to '設定変更', edit_users_member_path(@member), class: 'btn btn-success btn-block' %>
      </div>
    </div>
    <% if @member.shift_coordinator? %>
      <div class="box box-danger">
        <div class="box-header with-border">
          <h3 class="box-title">シフト管理者用メニュー</h3>
        </div>
        <div class="box-body box-profile">
          <%= link_to 'メンバー一覧', { controller: "users/shift_coordinators/members", action: 'index', team_id: @team.id }, class: 'btn btn-default btn-block' %>
          <%= link_to 'シフト希望一覧', { controller: "users/shift_coordinators/shift_submissions", action: 'index', team_id: @team.id }, class: 'btn btn-default btn-block' %>
          <%= link_to 'シフト調整一覧', { controller: "users/shift_coordinators/shift_adjustments", action: 'index', team_id: @team.id }, class: 'btn btn-default btn-block' %>
        </div>
      </div>
    <% end %>
    <div class="box">
      <div class="box-body no-padding">
        <table class="table">
          <tbody>
            <tr>
              <td>未調整のシフト希望</td>
              <td><span style="color: #3a87ad; opacity: 0.6;"><i class="fa fa-square"></i></span></td>
            </tr>
            <tr>
              <td>調整済みのシフト</td>
              <td><span style="color: #3a87ad;"><i class="fa fa-square"></i></span></td>
            </tr>
            <tr>
              <td>登録されたシフト</td>
              <td><span style="color: #FA3932"><i class="fa fa-square"></i></span></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <div class="box box-primary">
      <div class="box-body no-padding">
        <div id="users_shift_calendar" data-team_id="<%= @team.id %>"></div>
      </div>
    </div>
  </div>
</div>
