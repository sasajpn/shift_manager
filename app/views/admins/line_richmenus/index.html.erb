<% if @line_richmenus.any? %>
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">チーム一覧</h3>
      <div class="box-tools">
        <%= paginate @line_richmenus, theme: 'admins' %>
      </div>
    </div>
    <div class="box-body no-padding">
      <table class="table">
        <tbody>
          <tr>
            <th>タイトル</th>
            <th>リッチメニューのID</th>
            <th>リッチメニューの画像</th>
            <th>表示タイプ</th>
          </tr>
          <% @line_richmenus.each do |line_richmenu| %>
            <tr>
              <td><%= line_richmenu.title %></td>
              <td><%= line_richmenu.richmenu_id %></td>
              <td><%= line_richmenu.image %></td>
              <td><%= line_richmenu.type %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="callout callout-danger">
    <p>LINEのリッチメニューが登録されていません</p>
  </div>
<% end %>
