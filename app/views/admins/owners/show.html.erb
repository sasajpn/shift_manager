<div class="row">
  <div class="col-md-3">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <p class="text-muted text-center"><%= @owner.name_kana %></p>
        <h3 class="profile-username text-center"><%= @owner.name %></h3>
        <p class="text-muted text-center"><%= @owner.email %></p>
        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>登録チーム数</b> <a class="pull-right"><%= @owner.teams.count %></a>
          </li>
        </ul>
        <%= link_to 'プロフィール編集', edit_admins_owner_path(@owner), class: "btn btn-success btn-block" %>
        <%= link_to 'チーム登録', new_admins_owner_team_path(@owner), class: "btn btn-primary btn-block" %>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <% if @teams.any? %>
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">チーム一覧</h3>
          <div class="box-tools">
            <%= paginate @teams, theme: 'admins' %>
          </div>
        </div>
        <div class="box-body no-padding">
          <table class="table">
            <tbody>
              <tr>
                <th>名前</th>
                <th>従業員数</th>
                <th>認証コード</th>
              </tr>
              <% @teams.each do |team| %>
                <tr>
                  <td><%= link_to team.name, admins_team_path(team) %></td>
                  <td></td>
                  <td><%= team.identifier %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="callout callout-danger">
        <p>チームが登録されていません</p>
      </div>
    <% end %>
  </div>
</div>
