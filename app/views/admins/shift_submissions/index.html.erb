<% if @shift_submissions.any? %>
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">シフト希望一覧</h3>
      <div class="box-tools">
        <%= paginate @shift_submissions, theme: 'admins' %>
      </div>
    </div>
    <div class="box-body no-padding">
      <table class="table">
        <tbody>
          <tr>
            <th>提出者</th>
            <th>希望日</th>
            <th>開始時間</th>
            <th>終了時間</th>
          </tr>
          <% @shift_submissions.each do |shift_submission| %>
            <tr>
              <td><%= shift_submission.member.user.name %></td>
              <td><%= link_to shift_submission.submitted_date_format, admins_shift_submission_path(shift_submission) %></td>
              <td><%= shift_submission.start_time %></td>
              <td><%= shift_submission.end_time %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="callout callout-danger">
    <p>未承認のシフト希望がありません</p>
  </div>
<% end %>
