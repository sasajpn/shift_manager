<div class="row">
  <div class="col-md-3">
    <div class="box box-primary">
      <div class="box-body box-profile">
        <p class="text-muted text-center"><%= @user.name_kana %></p>
        <h3 class="profile-username text-center"><%= @user.name %></h3>
        <p class="text-muted text-center"><%= @user.email %></p>
        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>参加チーム数</b> <span class="pull-right"><%= @user.members.count %></span>
          </li>
        </ul>
        <%= link_to 'プロフィール編集', edit_admins_user_path(@user), class: "btn btn-success btn-block" %>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <% if @members.any? %>
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">参加チーム一覧</h3>
          <div class="box-tools">
            <%= paginate @members, theme: 'admins' %>
          </div>
        </div>
        <div class="box-body no-padding">
          <table class="table">
            <tbody>
              <tr>
                <th>チーム名</th>
                <th>役職</th>
              </tr>
              <% @members.each do |member| %>
                <tr>
                  <td><%= link_to member.team.name, admins_team_path(member.team) %></td>
                  <td><%= member.role_i18n %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="callout callout-danger">
        <p>チームに参加していません</p>
      </div>
    <% end %>
  </div>
</div>
