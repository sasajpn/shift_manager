<% if @users.any? %>
  <div class="box">
    <div class="box-header">
      <h3 class="box-title">ユーザー一覧</h3>
      <div class="box-tools">
        <%= paginate @users, theme: 'admins' %>
      </div>
    </div>
    <div class="box-body no-padding">
      <table class="table">
        <tbody>
          <tr>
            <th>名前</th>
            <th>参加チーム数</th>
          </tr>
          <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.name, admins_user_path(user) %></td>
              <td><%# user.teams.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="callout callout-danger">
    <p>ユーザーが登録されていません</p>
  </div>
<% end %>
